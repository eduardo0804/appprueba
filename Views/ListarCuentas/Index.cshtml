@model appprueba.ViewModel.CuentaBancariaViewModel
@{
    ViewData["Title"] = "Listado de Cuentas";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="color: #004085;">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0 text-center">Lista de Cuentas Bancarias</h5>
                </div>
                <div class="card-body p-4">
                    <table class="table table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nombre del Titular</th>
                                <th>Tipo de Cuenta</th>
                                <th>Saldo Inicial</th>
                                <th>Correo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListarCuentaBancaria != null && Model.ListarCuentaBancaria.Any())
                            {
                                @foreach (var cuenta in Model.ListarCuentaBancaria)
                                {
                                    <tr>
                                        <td>@cuenta.NomTitular</td>
                                        <td>@cuenta.TipoCuenta</td>
                                        <td>S/ @cuenta.SaldoInicial.ToString("N2")</td>
                                        <td>@cuenta.Correo</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-danger">No hay cuentas bancarias registradas.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add some styles to enhance the appearance -->
<style>
    body {
        background-color: #f0f8ff;
    }

    h1 {
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: #d1ecf1;
    }

    .card {
        border: 1px solid #004085;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: 600;
    }

    .table th {
        background-color: #004085;
        color: white;
    }
</style>

