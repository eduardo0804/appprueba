@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar Perfil";
}

<!-- Contenedor único para el mensaje y formulario de registro -->
<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Título y descripción del registro -->
            <div class="text-center mb-4">
                <h1 class="display-5 text-primary font-weight-bold">Bienvenido a Banco Prosperidad</h1>
                <p class="lead">Regístrate para realizar el registro de tus cuentas bancarias</p>
            </div>
            
            <!-- Formulario de registro dentro de una tarjeta -->
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

                        <!-- Campo de Email con Floating Label -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Correo Electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Campo de Contraseña con Floating Label -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" type="password" placeholder="password" />
                            <label asp-for="Input.Password">Contraseña</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirmación de Contraseña con Floating Label -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" type="password" placeholder="confirm password" />
                            <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Botón de registro -->
                        <div class="d-grid">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Crear Cuenta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos personalizados para darle vida al diseño -->
<style>
    body {
        background-color: #f0f2f5;
    }
    .text-primary {
        color: #004085 !important;
    }

    .btn-primary {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-primary:hover {
        background-color: #004085;
        border-color: #003366;
    }

    .form-floating label {
        color: #555;
    }

    .form-floating input:focus {
        border-color: #004085;
        box-shadow: 0 0 0 0.2rem rgba(0, 64, 133, 0.25);
    }

    .card {
        border-radius: 15px;
    }

    .card-body {
        background-color: #fff;
        border-radius: 15px;
    }

    .btn-lg {
        padding: 10px 20px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


