@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<!-- Contenedor principal con fondo y diseño elegante -->
<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <!-- Título del formulario -->
            <div class="text-center mb-4">
                <h1 class="display-5 text-primary font-weight-bold">@ViewData["Title"]</h1>
                <p class="lead">Ingresa tu correo electrónico asociado a tu cuenta en <strong>Banco Prosperidad</strong> y te enviaremos instrucciones para restablecer tu contraseña.</p>
            </div>

            <!-- Formulario para restablecer la contraseña dentro de una tarjeta -->
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4">Restablecer Contraseña</h3>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

                        <!-- Campo de Email con Floating Label -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Correo Electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Botón para solicitar restablecimiento -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Restablecer Contraseña</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #f0f2f5;
    }

    .text-primary {
        color: #004085 !important;
    }

    .btn-primary {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-primary:hover {
        background-color: #004085;
        border-color: #003366;
    }

    .form-floating label {
        color: #555;
    }

    .form-floating input:focus {
        border-color: #004085;
        box-shadow: 0 0 0 0.2rem rgba(0, 64, 133, 0.25);
    }

    .card {
        border-radius: 15px;
    }

    .card-body {
        background-color: #fff;
        border-radius: 15px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

